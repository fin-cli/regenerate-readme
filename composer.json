{
	"name": "fp-cli/regenerate-readme",
	"description": "PHP Composter action to regenerate the README.md file (pre-commit + post-commit).",
	"license": "MIT",
	"authors": [
		{
			"name": "Alain Schlesser",
			"email": "alain.schlesser@gmail.com"
		}
	],
	"type": "php-composter-action",
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php-composter/php-composter": "*",
		"fp-cli/scaffold-package-command": "*",
		"fp-cli/fp-cli": "^2"
	},
	"require-dev": {
		"fp-cli/fp-cli-tests": "*"
	},
	"autoload": {
		"psr-4": {
			"FP_CLI\\RegenerateReadme\\": "src/"
		}
	},
	"extra": {
		"php-composter-hooks": {
			"10.pre-commit": "FP_CLI\\RegenerateReadme\\Regenerator::pre_commit",
			"10.post-commit": "FP_CLI\\RegenerateReadme\\Regenerator::post_commit"
		},
        "readme": {
            "sections": [
	            "Installing",
                "Using",
                "Contributing",
                "Support"
            ],
            "installing": {
                "body": ".readme-partials/INSTALLING.md"
            },
            "using": {
                "body": ".readme-partials/USING.md"
            },
            "show_powered_by": false
        }
    },
	"scripts": {
        "lint": "run-linter-tests",
        "phpcs": "run-phpcs-tests",
        "phpunit": "run-php-unit-tests",
        "behat": "run-behat-tests",
        "prepare-tests": "install-package-tests",
        "test": [
            "@lint",
            "@phpcs",
            "@phpunit",
            "@behat"
        ]
	},
	"config": {
		"platform": {
			"php": "5.4"
		},
		"sort-packages": true
	}
}
